{
  "name": "redux-demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-scripts": "^1.0.10",
    "redux": "^3.7.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "build": "npm build-css && react-scripts build",
    "build-css": "node-sass src/ -o src/",
    "cover": "cross-env CI=true npm test -- --coverage",
    "cover-open": "open coverage/lcov-report/index.html",
    "flow": "flow",
    "format": "prettier-eslint --no-bracket-spacing --single-quote --write src/**/*.js",
    "lint": "eslint --quiet src --ext .js",
    "prepush": "npm run verify",
    "start": "npm-run-all -p watch-css react-start",
    "react-start": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "test-no-watch": "cross-env CI=true npm test -- --verbose",
    "verify-save": "npm-run-all lint flow format cover",
    "verify": "npm-run-all lint flow format",
    "watch-css": "npm run build-css && node-sass src/ -o src/ --watch"
  },
  "devDependencies": {
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "eslint": "^4.4.1",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.52.0",
    "husky": "^0.14.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "prettier-eslint-cli": "^4.1.1",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.2.3"
  }
}
